---
import "../styles/global.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full text-sm sm:text-base">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content="/og.png" />
		<meta property="og:title" content="Hung Duong Quang" />
		<meta property="og:description" content="Hung's personal website." />
		<title>{title}</title>
	</head>
	<body
		class="relative flex h-full flex-col items-center justify-center font-cascadia-mono selection:bg-teal-300 selection:text-zinc-800"
	>
		<slot />
	</body>
</html>
